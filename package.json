{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "commitizen": "^4.2.3",
    "cross-env": "^7.0.3",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^5.1.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "react-scripts": "^4.0.3",
    "semantic-release": "^17.3.9",
    "semantic-release-cli": "^5.4.3"
  },
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run --parallel --stream start",
    "commit": "cz",
    "setup:commitizen": "commitizen init cz-lerna-changelog --save-dev --save-exact",
    "semantic-release": "semantic-release",
    "setup:semantic-release": "semantic-release-cli setup"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/codesagas/codesagas-app.git"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
